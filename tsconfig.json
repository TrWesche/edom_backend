{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strictNullChecks": true
    },
    "include": [
        "src/**/*"
    ]
}